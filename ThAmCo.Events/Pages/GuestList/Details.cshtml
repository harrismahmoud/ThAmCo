@page
@model ThAmCo.Events.Pages.GuestList.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Guest</h4>

    <!-- Display details of the currently selected guest and their associated events -->
    @if (Model.GuestEvents != null && Model.GuestEvents.Any())
    {
        <h5>Events for Guest: @Model.GuestBooking.Guest.GuestName</h5>
        <table class="table">
            <thead>
                <tr>
                    <th>Event Name</th>
                    <th>Event Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var guestEvent in Model.GuestEvents)
                {
                    <tr>
                        <td>@guestEvent.EventName</td>
                        <td>@guestEvent.EventDate.ToString("d")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>This guest is not attending any events.</p>
    }
   
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Guest.GuestName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Guest.GuestName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Guest.GuestContact)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Guest.GuestContact)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Guest.GuestId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
