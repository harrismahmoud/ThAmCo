            </tr>
        </thead>
        <tbody>
            @foreach (var guestEvent in Model.GuestEvents)
            {
                <tr>
                     <td>@guestEvent.EventName</td> 
                    
                    
                    <td>@guestEvent.EventDate.ToString("d")</td>
                </tr>
            }
        </tbody>
