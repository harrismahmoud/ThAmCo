@page
@model ThAmCo.Events.Pages.EventList.AddGuestModel

@{
    ViewData["Title"] = "AddGuest";
}

<h1>AddGuest</h1>

<h4>GuestBooking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GuestBooking.GuestId" />
            <input type="hidden" asp-for="GuestBooking.EventId" />
            <select asp-for="GuestBooking.GuestId" class="form-control" asp-
                    items="@(ViewData["GuestId"] as SelectList)"></select>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
