@page
@model ThAmCo.Events.Pages.StaffList.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Staff</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff.StaffName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.StaffName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staff.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staff.Email)
        </dd>
    </dl>
</div>
<h3>Staff Assigned to this Event</h3>

@if (Model.AssignedStaff != null && Model.AssignedStaff.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Staff Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var staff in Model.AssignedStaff)
            {
                <tr>
                    <td>@staff.StaffName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No staff have been assigned to this event yet.</p>
}


<div>
    <a asp-page="./Edit" asp-route-id="@Model.Staff.StaffId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
